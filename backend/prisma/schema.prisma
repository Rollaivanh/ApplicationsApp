generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
enum EstadoPostulacion {
  Enviada
  Entrevista
  Oferta
  Rechazada
  SinRespuesta
}

model Postulacion {
  id          Int               @id @default(autoincrement())
  empresa     String
  puesto      String
  descripcion String?
  notas       String?
  link        String?
  imagen      String?
  fechaEntrevista DateTime?
  estado      EstadoPostulacion @default(Enviada)
  creadaEn    DateTime          @default(now())
  actualizadaEn DateTime        @updatedAt
}
